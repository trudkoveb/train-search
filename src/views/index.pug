                    li.drop-down_wrapper
                        a(href="#") Trans-Siberian
                        ul.drop-down_content
                            li
                                a(href="#") Lorem
                            li
                                a(href="#") Lorem ipsum
                            li
                                a(href="#") Lorem ipsum dolor
                    li.drop-down_wrapper
                        a(href="#") Faq
                        ul.drop-down_content
                            li
                                a(href="#") Lorem
                            li
                                a(href="#") Lorem ipsum
                            li
                                a(href="#") Lorem ipsum dolor
                    li.drop-down_wrapper
                        a(href="#") Tickets guide
                        ul.drop-down_content
                            li
                                a(href="#") Group travel
                            li
                                a(href="#") Ticket types
                            li
                                a(href="#") Child policy
                            li
                                a(href="#") Change ticket request
                            li
