    link(rel='stylesheet', href='css/style.min.css')
  body
    .wrapper
        header
            nav
                button.mobile-menu(onclick="showMenu()")
                ul#menu
                    li
                        a(href="#") Search tickets
                    li
                        a(href="#") Sapsan
                    li
